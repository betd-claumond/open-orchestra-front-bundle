{% macro menu_links(links, name) %}
    {% set create = '' %}
    <ul class="{{ name }}-connectedSortable">
    {% for link in links %}
        {% set id = name ~ '-' ~ e_crc32(link.id) %}
        <li class="{{ link.class }}" id="{{ id }}">
            <div>
                <a href="{{ link.url }}">
                    {% if link.action is defined %}
                    <i class="{{ link.action.css }}">
                        {{ link.action.text }}
                        <script>
                            $('#{{ id }} i').eq(0).data({{ {'url':link.action.url}|json_encode|raw }});
                        </script>
                    </i>
                    {% endif %}
                    {{ link.name }}
                </a>
                {% if 'sublinks' in link|keys %}
                    {{ _self.menu_links(link.sublinks, name) }}
                {% endif %}
                <script>
                    $('#{{ id }}').data({{ {'tree-parameter':link.parameter}|json_encode|raw }});
                </script>
            </div>
        </li>
    {% endfor %}
    </ul>
{% endmacro %}